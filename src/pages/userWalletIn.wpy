}

.winDetail_center {
    float: left;
    margin-left: 20rpx;
}

.winDetail_center view {
    width: 300rpx;
    overflow: hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
}
.winDetail_right view{
  width: 270rpx;
  overflow: hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
