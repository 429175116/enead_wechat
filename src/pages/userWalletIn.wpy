<template>
  <view>
      <view class="winDetail">
        <view class="winDetail_img">
          <image src="{{image}}" class=""/>
        </view>
        <view class="winDetail_center">
          <view>nickName</view>
          <view class="winDetail_text">入账方式:查看</view>
        </view>
        <view class="winDetail_right">
          <view>时间时间时间</view>
          <view>广告广告</view>
          <view class="winDetail_title">入账10￥</view>
        </view>
      </view>
    <repeat for="{{reserveList}}" key="index" index="index" item="item">
      <view class="winDetail">
        <view class="winDetail_img">
          <image src="{{userInfo.avatarUrl}}" class=""/>
        </view>
        <view class="winDetail_center">
          <view>{{userInfo.nickName}}</view>
          <view class="winDetail_text">入账方式:{{item.type}}</view>
        </view>
        <view class="winDetail_right">
          <view>{{item.date}} {{item.time}}</view>
          <view>{{item.ad}}</view>
          <view class="winDetail_title">入账{{item.in}}</view>
        </view>
      </view>
    </repeat>
    <view class="listMessage hide {{prompt?'show':''}}">已无更多数据</view>
    <view class="listMessage hide {{listShow?'show':''}}">暂无列表数据</view>
  </view>
</template>

<script>
import wepy from 'wepy'
export default class Userwalletin extends wepy.page {
  config = {
    'navigationBarTitleText': '钱包入账明细'
  };
  // 生命组件ID
  components = {};
  data = {
    image: 'https://ss0.bdstatic.com/94oJfD_bAAcT8t7mm9GUKT-xh_/timg?image&quality=100&size=b4000_4000&sec=1556471365&di=d09f43e91e233b96bdd6a76297de48a9&src=http://b-ssl.duitang.com/uploads/item/201806/03/20180603232440_qwqcn.jpeg',
    motto: 'Hello World',
    reserveList: null,
    userInfo: null,
    prompt: false,
    listShow: false
  };
  methods = {};
  async onLoad() {
    this.userInfo = this.$parent.globalData.userInfo
    await wepy.login().then(res => {
      this.code = res.code
    })
    await wx.request({
      url: `${this.$parent.globalData.requestUrl}/wallet/in_show`,
      method: 'POST',
      data: {
        code: this.code
      },
      success: data => {
        if (data.statusCode === 200) {
          let reserveList = data.data.data
          let allTime = ''
          if (reserveList.length <= 0) {
            this.listShow = true
            this.$apply()
            return
          }
          for (let i = 0; i < reserveList.length; i++) {
            allTime = reserveList[i].created_at
            allTime = allTime.split(' ')
            reserveList[i]['date'] = allTime[0]
            reserveList[i]['time'] = allTime[1]
          }
          this.reserveList = reserveList
          this.$apply()
          // 获取下一页的请求Id
          if (data.data.meta.pagination.links) {
            this.getUrl = data.data.meta.pagination.links.next
          }
        }
      }
    })
  };
  /**
   * 页面上拉触底事件的处理函数
   */
  async onReachBottom() {
    if (!this.getUrl) {
      this.prompt = false
      this.$apply()
      return
    }
    await wepy.login().then(res => {
      this.code = res.code
    })
    await wx.request({
      url: this.getUrl,
      method: 'POST',
      data: {
        code: this.code
      },
      success: data => {
        if (data.statusCode === 200) {
          let reserveList = data.data.data
          let allTime = ''
          for (let i = 0; i < reserveList.length; i++) {
            allTime = reserveList[i].created_at
            allTime = allTime.split(' ')
            reserveList[i]['date'] = allTime[0]
            reserveList[i]['time'] = allTime[1]
          }
          // 将新的请求结果加入原有数组  concat连接两个或更多的数组，并返回结果。
          this.reserveList = this.reserveList.concat(reserveList)
          this.$apply()
          // 更新下一页请求地址
          if (data.data.meta.pagination.links) {
            this.getUrl = data.data.meta.pagination.links.next
          }
        }
      }
    })
  }
}
</script>