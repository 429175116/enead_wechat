<style lang="less">
.recharge {
    border: 2rpx solid gainsboro;
    width: 95%;
    height: 550rpx;
    position: relative;
    top: 20rpx;
    left: 2.5%;
    color: #fff;
    border-radius: 20rpx;
    font-size: 30rpx;
    background: #7bb312;
}
.recharge_border {
    border: 1px solid #fff;
    width: 98%;
    margin: 10rpx 1%;
    border-radius: 20rpx;
    height: 530rpx;
}
.pay_address{
    margin: 40rpx 40rpx 0 40rpx;

}
.pay_address_text{
    font-size: 24rpx;
    margin-left: 20rpx;
}
.money{
    font-size: 80rpx;
    margin: 40rpx 40rpx 20rpx 40rpx;
    float:left;
}
.inputs{
    font-size: 40rpx;
    height: 90rpx;
    margin-left: 20rpx;
    border-bottom: 1px solid #fff;
    float:right;
    width: 500rpx;
}
.reserve {
    margin: 40rpx 40rpx 0 40rpx;
    font-size: 24rpx;
}
.money_text{
     font-size: 30rpx;
}

.btn{
    background: rgba(0, 0, 0, 0);
    border: 1px solid #fff;
    width: 70%;
    height: 88rpx;
    margin: 40rpx auto;
    border-radius: 44rpx;
    color: #fff;
}
</style>
<template>
  <view class='recharge'>
    <view hover-class='none' class="recharge_border">
        <view class="pay_address">
            <text>储蓄金充值</text>
        </view>
        <form bindsubmit='upDataMoney'>
          <view class="money">
              ￥
              <input class="inputs" type='digit' name="upDataM" placeholder="输入充值金额" />
          </view>
          <view class="reserve">
              当前余额
              <text class="money_text">{{reserve}}</text>元
          </view>
          <button formType="submit" class="btn">充值</button>
        </form>
    </view>
    <view class="loadingImg">
      <image src="/img/loading.gif" class="hide {{loadingImgShow?'show':''}}" />
    </view>
  </view>
</template>

<script>
import wepy from 'wepy'
// 校验封装
import check from '../mixins/check'
export default class shopRecharge extends wepy.page {
  mixins = [check]
  config = {
    'navigationBarTitleText': '余额充值'
  };
  // 生命组件ID
  components = {
    // withdraw: withdraw
  };
  data = {
    // 请求路径
    requestUrl: '',
    // 余额
    reserve: '',
    loadingImgShow: false
  };
  methods = {
    // 提交数据
    async upDataMoney(event) {
      // 提现金额
      var upDataM = event.detail.value.upDataM
      // 红包余额
      var reserve = this.reserve
      if (this.check.isNull(upDataM)) {
        wepy.showModal({
          title: '',
          content: '请输入金额',
          showCancel: false
        })
        return
      }
      if (this.check.isMoney(upDataM)) {
        wepy.showModal({
          title: '',
          content: '请输入正确金额',
          showCancel: false
        })
        return
      }
      upDataM = parseFloat(upDataM)
      if (upDataM <= 0) {
        wepy.showModal({
          title: '',
          content: '金额不可小于等于0',
          showCancel: false
        })
        return
      }
      upDataM = parseFloat(upDataM)
      reserve = parseFloat(reserve)
      await wepy.login().then(res => {
        this.code = res.code
      })
      // loading图片显示
      this.loadingImgShow = true
      this.$apply()
      await wx.request({
        url: `${this.$parent.globalData.requestUrl}/shop/reserve_in`,
        method: 'POST',
        data: {
          code: this.code,
          in: upDataM
        },
        success: data => {
          wx.requestPayment({
            'timeStamp': data.data.data.timestamp,
            'nonceStr': data.data.data.nonceStr,
            'package': data.data.data.package,
            'signType': data.data.data.signType,
            'paySign': data.data.data.paySign,
            'success': data => {
              // loading图片隐藏
              this.loadingImgShow = false
              this.$apply()
              reserve += upDataM
              wepy.showModal({
                title: '',
                content: '充值成功',
                showCancel: false
              })
              // 两秒后返回上一页
              setTimeout(e => {
                wx.navigateBack({ changed: true })
              }, 2000)
            },
            'fail': data => {
              wepy.showModal({
                title: '',
                content: '充值失败',
                showCancel: false
              })
            }
          })
          this.$parent.globalData.shopInfo.reserve = reserve
        }
      })
    }
  };
  onLoad() {
    // 获取接口亲求路径
    this.requestUrl = this.$parent.globalData.requestUrl
    // 获取余额
    this.reserve = this.$parent.globalData.shopInfo.reserve
    this.$apply()
  };
}
</script>