<template>
  <view>
    <scroll-view scroll-y class="getMoneyList">
<!-- getMoneyList -->
        <view class="winDetail" data-index="{{index}}">
          <view class="winDetail_img">
            <image src="{{images}}" class=""/>
          </view>
          <view class="winDetail_center">
            <view>昵称</view>
            <view class="winDetail_text">领取类别-观看、分享</view>
          </view>
          <view class="winDetail_right">
            <view>金额1.00¥</view>
            <view>2019.4.30 14:30</view>
            <view class="winDetail_title"> </view>
          </view>
        </view>
      <repeat for="{{getMoneyList}}" key="index" index="index" item="item">
        <view class="winDetail" data-index="{{index}}">
          <view class="winDetail_img">
            <image src="{{item.user.avatar}}" class=""/>
          </view>
          <view class="winDetail_center">
            <view>{{item.user.nick_name}}</view>
            <view class="winDetail_text">{{title}}</view>
          </view>
          <view class="winDetail_right">
            <view>{{item.in}}¥</view>
            <view>{{item.created_at}}</view>
            <view class="winDetail_title"> </view>
          </view>
        </view>
      </repeat>
      <view class="listMessage" wx:if="{{nextUrl != '' && getMoneyList.length != 0}}" @tap="getMoreList">显示更多</view>
      <view class="listMessage" wx:if="{{nextUrl === '' && getMoneyList.length != 0}}">已无更多纪录,共{{allTotal}}人领取</view>
      <view class="listMessage" wx:if="{{getMoneyList.length == 0}}">暂无领取纪录</view>
    </scroll-view>
    <!-- 活动主图 -->
    <!-- <image src="{{adImage}}" style="width:{{autoW}}px;height:{{autoH}}px" bindload='autoImage' class="activity {{indexloading}}" /> -->
    <image src="{{images}}" style="width:{{autoW}}px;height:{{autoH}}px" bindload='autoImage' class="activity {{indexloading}}" />
    <view class="shopInfo">
      <view class="shopName">店铺名</view>
      <view @tap="dialPhone" data-phone="18888888888">电话:18888888888</view>
      <view>广告余额:10.00￥</view>
      <!-- <view class="shopName">{{title}}</view>
      <view @tap="dialPhone">电话:{{shopInfo.phone}}</view>
      <view>广告余额:{{total}}</view> -->
    </view>
    <view class="buy">
      <!-- <view class="recharge" @tap="setShopCart">充值</view> -->
      <button class="shareIt" type="primary" open-type="share" data-name="pageShare" id="share">分享</button>
    </view>
  </view>
</template>

<script>
import wepy from 'wepy'
import nav from '../components/nav' // 底部导航
import check from '../mixins/check'
// import author from '../components/author' // 授权按钮
export default class Addetails extends wepy.page {
  mixins = [check]
  config = {
    'navigationBarTitleText': '广告详情'
  };
  // 生命组件ID
  components = {
    // 底部导航
    nav: nav
  };
  // alias example
  data = {
    images: 'https://ss0.bdstatic.com/94oJfD_bAAcT8t7mm9GUKT-xh_/timg?image&quality=100&size=b4000_4000&sec=1556471365&di=d09f43e91e233b96bdd6a76297de48a9&src=http://b-ssl.duitang.com/uploads/item/201806/03/20180603232440_qwqcn.jpeg',
    autoW: 0,
    autoH: 0,
    adImage: '',
    image: '',
    title: '',
    id: '',
    uuid: '',
    total: 0,
    userInfo: null,
    shopInfo: null,
    getMoneyList: null,
    nextUrl: '',
    allTotal: 0 // 共几人领取
  };

  methods = {
    dialPhone(e) {
      // 拨打电话执行
      this.dialPhoneRun(e)
    }
  };
  async onLoad(options) {
    this.adImage = options.ad
    this.title = options.title
    this.id = options.id
    this.uuid = options.uuid
    this.total = options.total
    this.userInfo = this.$parent.globalData.userInfo
    this.shopInfo = this.$parent.globalData.shopInfo
    this.getAdUserInfo()
  };
  dialPhoneRun(e) {
    // 拨打电话执行
    let phone = e.target.dataset.phone
    if (phone) {
      wx.makePhoneCall({
        phoneNumber: phone,
        success: function () {
          console.log('拨打电话成功！')
        },
        fail: function () {
          console.log('拨打电话失败！')
        }
      })
    }
  }
  async getAdUserInfo() {
    await wepy.login().then(res => {
      this.code = res.code
    })
    await wx.request({
      url: `${this.$parent.globalData.requestUrl}/shop/reserve_in_show_by_uuid`,
      method: 'POST',
      data: {
        code: this.code,
        uuid: this.uuid
      },
      success: data => {
        if (data.statusCode === 200) {
          let getMoneyList = data.data.data.data
          this.getMoneyList = getMoneyList
          this.allTotal = data.data.data.total
          this.$apply()
          // 获取下一页的请求Id
          this.nextUrl = ''
          this.nextUrl = data.data.next_page_url
        }
      }
    })
  };
  /**
   * 页面上拉触底事件的处理函数
   */
  async getMoreList() {
    if (!this.nextUrl) {
      return
    }
    await wepy.login().then(res => {
      this.code = res.code
    })
    await wx.request({
      url: this.nextUrl,
      method: 'POST',
      data: {
        code: this.code,
        uuid: this.uuid
      },
      success: data => {
        if (data.statusCode === 200) {
          let getMoneyList = data.data.data.data
          // 将新的请求结果加入原有数组  concat连接两个或更多的数组，并返回结果。
          this.getMoneyList = this.getMoneyList.concat(getMoneyList)
          this.$apply()
          // 更新下一页请求地址
          this.nextUrl = ''
          this.nextUrl = data.data.next_page_url
        }
      }
    })
  }
  // 控制背景图大小
  autoImage(e) {
    // 获取图片的狂傲
    var imgW = e.detail.width
    var imgH = e.detail.height
    // 计算图片比例
    var imgScale = imgW / imgH
    // 声明自适应宽高变量
    var autoW = ''
    var autoH = ''
    // 获取屏幕宽度，并将图片设置为屏幕等宽
    wx.getSystemInfo({
      success: res => {
        autoW = res.windowWidth
        autoH = autoW / imgScale
        this.autoW = autoW
        this.autoH = autoH
        this.$apply()
      }
    })
  }
  prompthide() {
    // 隐藏弹框
    this.promptShow = false
    this.$apply()
  }
  // 分享页面
  onShareAppMessage(res) {
    let url = `pages/index?uuid=${this.uuid}`
    console.log(url)
    // this.prompthide()
    return {
      title: this.title,
      desc: '',
      // 图片路径
      imageUrl: this.adImage,
      path: url
    }
  };
}
</script>