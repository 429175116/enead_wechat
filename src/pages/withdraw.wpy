<template>
  <view class='recharge'>
    <view hover-class='none' class="recharge_border">
        <view class="pay_address">
            <text>到账地址</text>
            <text class="pay_address_text">{{arrivalAddress}}</text>
        </view>
        <view class="pay_address">
            <text>提现金额</text>
        </view>
        <form bindsubmit='upDataMoney'>
          <view class="money">
              ￥
              <input class="inputs" type='digit' name="upDataM" placeholder="输入提现金额" />
          </view>
          <view class="balance">
              当前红包余额
              <text class="money_text">{{hongbao}}</text>元
          </view>
          <view class="balance">
              单次提现金额最少为为5元，平台收取10%服务费
          </view>
          <button formType="submit" class="btn">提现</button>
        </form>
    </view>
    <view class="loadingImg">
      <image src="/img/loading.gif" class="hide {{loadingImg?'show':''}}" />
    </view>
  </view>
</template>

<script>
import wepy from 'wepy'
// import withdraw from '../components/rechargeReflect'
import check from '../mixins/check' // 校验封装
export default class Withdraw extends wepy.page {
  config = {
    'navigationBarTitleText': '提现'
  };
  mixins = [check]
  // 生命组件ID
  components = {
    // withdraw: withdraw
  };
  data = {
    requestUrl: '',
    hongbao: '',
    arrivalAddress: '微信零钱',
    loadingImg: false
  };
  methods = {
    // 提交数据
    async upDataMoney(event) {
      // 提现金额
      let upDataM = event.detail.value.upDataM
      // 红包余额
      let hongbao = this.hongbao
      if (this.check.isNull(upDataM)) {
        wepy.showModal({
          title: '',
          content: '请输入金额',
          showCancel: false
        })
        return
      }
      if (this.check.isMoney(upDataM)) {
        wepy.showModal({
          title: '',
          content: '请输入正确金额',
          showCancel: false
        })
        return
      }
      if (upDataM < 5) {
        wepy.showModal({
          title: '',
          content: '最少提现金额为5.00元',
          showCancel: false
        })
        return
      }
      upDataM = parseFloat(upDataM)
      hongbao = parseFloat(hongbao)
      if (upDataM > hongbao) {
        wepy.showModal({
          title: '',
          content: '提现金额大于余额,不可提现',
          showCancel: false
        })
        return
      }
      if (upDataM <= 0) {
        wepy.showModal({
          title: '',
          content: '不可提现',
          showCancel: false
        })
        return
      }
      // loading图片显示
      this.loadingImg = true
      this.$apply()
      await wepy.login().then(res => {
        this.code = res.code
      })
      await wx.request({
        url: `${this.$parent.globalData.requestUrl}/wallet/out`,
        method: 'POST',
        data: {
          code: this.code,
          out: upDataM
        },
        success: data => {
          // loading图片隐藏
          this.loadingImg = false
          this.$apply()
          if (data.statusCode === 401) {
            wepy.showModal({
              title: '',
              content: data.data.message,
              showCancel: false
            })
          } else if (data.statusCode === 201) {
            wepy.showModal({
              title: '',
              content: '提现成功',
              showCancel: false
            })
            // 两秒后返回上一页
            setTimeout(e => {
              wx.navigateBack({ changed: true })
            }, 2000)
            return
          }
          // 成功提示后面补
        }
      })
    }
  };
  onLoad() {
    // 获取接口亲求路径
    this.requestUrl = this.$parent.globalData.requestUrl
    // 获取余额
    this.hongbao = this.$parent.globalData.userShopInfo.hongbao
    this.$apply()
  };
}
</script>