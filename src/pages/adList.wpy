<style lang="less">
.title{
  width: 100%;
  height: 80rpx;
  display: inline-block;
}
.title view{
  display: inline-block;
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.title .action{
  border-bottom: 2px solid #f86e09;
}
.winDetail {
    width: 95%;
    border: 1px solid #eee;
    border-radius: 20rpx;
    height: 160rpx;
    margin: 20rpx 2.5%;
    color: #333;
    box-sizing: border-box;
    padding: 30rpx 0;
}

.winDetail_img image {
    width: 78rpx;
    height: 78rpx;
    float: left;
    margin-left: 20rpx;
    border-radius: 50%;
    margin-top: 10rpx;
}

.winDetail_center {
    float: left;
    margin-left: 20rpx;
    font-size: 40rpx;
}

.winDetail_center view {
    width: 300rpx;
    overflow: hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
}
.winDetail_text {
    font-size: 28rpx;
    margin-top: 10rpx;
}

.winDetail_right {
    float: right;
    margin-right: 20rpx;
    text-align: right;
    font-size: 20rpx;
    line-height: 35rpx;
}
</style>
<template>
  <view>
    <view class="recharge">
      <repeat for="{{adList}}" key="index" index="index" item="item">
        <view class="winDetail" data-id={{item.id}} data-index="{{index}}" @tap="goAdDetails">
          <view class="winDetail_img">
            <image src="{{item.ad}}" class=""/>
          </view>
          <view class="winDetail_center">
            <view>广告:{{item.title}}</view>
            <view class="winDetail_text">创建时间:{{item.createdAt}}</view>
          </view>
          <view class="winDetail_right">
            <view> </view>
            <view>剩余金额:{{item.balance}}</view>
            <view class="winDetail_title">{{item.suggestion}}</view>
          </view>
        </view>
      </repeat>
      <!-- <view class="listMessage" wx:if="{{nextUrl == ''}}">已无更多数据</view> -->
      <view class="listMessage" wx:if="{{adList.length == 0}}">暂无列表数据</view>
    </view>
  </view>
</template>

<script>
import wepy from 'wepy'
export default class Adlist extends wepy.page {
  config = {
    'navigationBarTitleText': '广告列表'
  };
  // 生命组件ID
  components = {};
  // alias example
  data = {
    shopInfo: null,
    userInfo: null,
    adList: null,
    nextUrl: ''
  };
  methods = {};
  onLoad() {
    this.userInfo = this.$parent.globalData.userInfo
    this.shopInfo = this.$parent.globalData.shopInfo
    // 默认显示入账明细
    this.getAdList()
  };
  onUnload() {
    wx.reLaunch({
      url: '/pages/user'
    })
  }
  // 广告列表
  async getAdList() {
    this.code = await this.$parent.login()
    await wx.request({
      url: `${this.$parent.globalData.requestUrl}shopAdverList`,
      method: 'GET',
      data: {
        'dto.adver.shopId': this.shopInfo.id
      },
      success: data => {
        data = this.$parent.null2str(data.data.dto)
        if (data.result === '0') {
          this.adList = data.advers.reverse()
          this.$apply()
        } else {
          wepy.showModal({
            title: '',
            content: data.msg,
            showCancel: false
          })
        }
      }
    })
  };
  /**
   * 页面上拉触底事件的处理函数
   */
  async onReachBottom() {
    if (!this.nextUrl) {
      return
    }
    this.code = await this.$parent.login()
    await wx.request({
      url: this.nextUrl,
      method: 'POST',
      data: {
        code: this.code
      },
      success: data => {
        if (data.statusCode === 200) {
          let adList = data.data.data
          // 将新的请求结果加入原有数组  concat连接两个或更多的数组，并返回结果。
          this.adList = this.adList.concat(adList)
          this.$apply()
          // 更新下一页请求地址
          if (data.data.meta.pagination.links) {
            this.nextUrl = data.data.meta.pagination.links.next
          }
        }
      }
    })
  }
  goAdDetails(e) {
    if (this.adList[e.currentTarget.dataset.index].suggestion) {
      this.$navigate(`/pages/adDetails?id=${e.currentTarget.dataset.id}`)
    } else {
      wepy.showModal({
        title: '',
        content: '广告暂未通过审核',
        showCancel: false
      })
    }
  }
}
</script>