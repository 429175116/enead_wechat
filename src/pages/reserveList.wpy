<script>
import wepy from 'wepy'
export default class ReserveInList extends wepy.page {
  config = {
    'navigationBarTitleText': '广告金明细'
  };
  // 生命组件ID
  components = {};
  // alias example
  data = {
    images: 'https://ss0.bdstatic.com/94oJfD_bAAcT8t7mm9GUKT-xh_/timg?image&quality=100&size=b4000_4000&sec=1556471365&di=d09f43e91e233b96bdd6a76297de48a9&src=http://b-ssl.duitang.com/uploads/item/201806/03/20180603232440_qwqcn.jpeg',
    shopInfo: null,
    reserveList: null,
    userInfo: null,
    prompt: false,
    listShow: false,
    // 入账Dom显示
    inListDom: true,
    // 出账Dom显示
    outListDom: false
  };
  methods = {};
  onLoad() {
    this.userInfo = this.$parent.globalData.userInfo
    this.shopInfo = this.$parent.globalData.shopInfo
    // 默认显示入账明细
    this.inList()
  };
  // 入账明细
  async inList() {
    // 入账Dom显示
    this.inListDom = true
    // 出账Dom显示
    this.outListDom = false
    this.code = await this.$parent.login()
    await wx.request({
      url: `${this.$parent.globalData.requestUrl}/shop/reserve_in_show`,
      method: 'POST',
      data: {
        code: this.code
      },
      success: data => {
        if (data.statusCode === 200) {
          let reserveList = data.data.data
          let allTime = ''
          if (reserveList.length <= 0) {
            this.listShow = true
            this.$apply()
            return
          }
          for (let i = 0; i < reserveList.length; i++) {
            allTime = reserveList[i].created_at
            allTime = allTime.split(' ')
            reserveList[i]['date'] = allTime[0]
            reserveList[i]['time'] = allTime[1]
          }
          this.reserveList = reserveList
          this.$apply()
          // 获取下一页的请求Id
          if (data.data.meta.pagination.links) {
            this.getUrl = data.data.meta.pagination.links.next
          }
        }
      }
    })
  }
  // 出账明细
  async outList() {
    // 入账Dom显示
    this.inListDom = false
    // 出账Dom显示
    this.outListDom = true
    this.code = await this.$parent.login()
    await wx.request({
      url: `${this.$parent.globalData.requestUrl}/shop/reserve_out_show`,
      method: 'POST',
      data: {
        code: this.code
      },
      success: data => {
        if (data.statusCode === 200) {
          let reserveList = data.data.data
          let allTime = ''
          if (reserveList.length <= 0) {
            this.listShow = true
            this.$apply()
            return
          }
          for (let i = 0; i < reserveList.length; i++) {
            allTime = reserveList[i].created_at
            allTime = allTime.split(' ')
            reserveList[i]['date'] = allTime[0]
            reserveList[i]['time'] = allTime[1]
          }
          this.reserveList = reserveList
          this.$apply()
          // 获取下一页的请求Id
          if (data.data.meta.pagination.links) {
            this.getUrl = data.data.meta.pagination.links.next
          }
        }
      }
    })
  }
  /**
   * 页面上拉触底事件的处理函数
   */
  async onReachBottom() {
    if (!this.getUrl) {
      this.prompt = false
      this.$apply()
      return
    }
    this.code = await this.$parent.login()
    await wx.request({
      url: this.getUrl,
      method: 'POST',
      data: {
        code: this.code
      },
      success: data => {
        if (data.statusCode === 200) {
          let reserveList = data.data.data
          let allTime = ''
          for (let i = 0; i < reserveList.length; i++) {
            allTime = reserveList[i].created_at
            allTime = allTime.split(' ')
            reserveList[i]['date'] = allTime[0]
            reserveList[i]['time'] = allTime[1]
          }
          // 将新的请求结果加入原有数组  concat连接两个或更多的数组，并返回结果。
          this.reserveList = this.reserveList.concat(reserveList)
          this.$apply()
          // 更新下一页请求地址
          if (data.data.meta.pagination.links) {
            this.getUrl = data.data.meta.pagination.links.next
          }
        }
      }
    })
  }
}
</script>