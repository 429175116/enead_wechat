      this.$emit('childFn', '/pages/index')
    },
    // 我的
    goUserList() {
      // 顶部导航状态初始化
      this.$parent.$parent.globalData.navAction = ['noAction', 'action']
      this.$emit('childFn', '/pages/user')
    }
  };
  onLoad() {
    this.navAction = this.$parent.$parent.globalData.navAction
    this.$apply()
  };
}
